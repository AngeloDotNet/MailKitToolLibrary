<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  	<TargetFramework>net6.0</TargetFramework>
  	<ImplicitUsings>enable</ImplicitUsings>
  	<Nullable>disable</Nullable>
  	<GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
  </PropertyGroup>
  
  <PropertyGroup>
  	<TargetFrameworks>net6.0</TargetFrameworks>
  	<Description>Mailkit tool custom library component</Description>
  	<RepositoryType>git</RepositoryType>
  	<RepositoryUrl>https://github.com/AngeloDotNet/MailKitToolLibrary</RepositoryUrl>
  	<RepositoryBranch>master</RepositoryBranch>
  </PropertyGroup>

  <ItemGroup>
	  <PackageReference Include="MailKit" Version="3.4.3" />
	  <PackageReference Include="Microsoft.AspNetCore.Identity.UI" Version="6.0.13" />
	  <PackageReference Include="Nerdbank.GitVersioning" Version="3.5.119">
	    <PrivateAssets>all</PrivateAssets>
	    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	  </PackageReference>
  </ItemGroup>

</Project>